/* pages/product/index.wxss */
@import "./public";

.search-content{
    top:0;
    z-index: 2;
}
.search-top{
    width:750rpx;
    height:88rpx;
    background:rgba(247,247,247,1);
    padding: 12rpx 24rpx;
    /* border: 1px solid; */
}
.search-input{
    width: 100%;
    height: 100%;
    background: #fff;
    border-radius:10rpx;
    padding-left: 30rpx;
    box-sizing: border-box;
}
.icon-text{
    left: 50%;
    top:50%;
    transform:translate(-50%,-50%);
}

.float-btn{
    bottom: 286rpx;
    left:24rpx;
    width:100rpx;
    height:100rpx;
    background:rgba(255,255,255,1);
    box-shadow:0px 6rpx 18rpx 0px rgba(0,0,0,0.1);
    border-radius: 50%;
}

    